Arx Fart-Arse-less

Scene 01 camera notes

Starting camera is camera 035 set to newpath 004



// SKIP_START
ON KEY_PRESSED {
 IF (#keypressed_intro != 1) ACCEPT
 SET #keypressed_intro 2
 SET #skip_cinematic 1
 SPEAK KILLALL
 IF (#fading == 0) WORLD_FADE OUT 500 0 0 0
 UNSET #fading
 TIMERamb OFF
 AMBIANCE -v 0 ambient_gob_intro
 TIMERoula -m 1 500 SENDEVENT -g INTRO SKIP_CINEMATIC ""
 TIMERfade OFF
 TIMERcama OFF
 TIMERfadein OFF
 REFUSE
}


>>STARTITALL
 //TELEPORT -PA 180 MARKER_0495
 //IF (#skip_cinematic == 0) WORLDFADE IN 1000
 
 
 CAMERA_SMOOTHING 2000
 CAMERA_FOCAL 90
 //SET_PATH NEWPATH0004
 //SENDEVENT CUSTOM CAMERA_0004 "CINEMATIC"
 //SENDEVENT CUSTOM MARKER_0495 "INTRO"
 //TIMERfade 1 7 GOTO STARTFADE
 //TIMERcama 1 9 GOTO deactivate
 ACCEPT



>>deactivate
 SET #fading 0
 WORLD_FADE IN 1000
 SENDEVENT CUSTOM CAMERA_0030 "Cinematic"
 SENDEVENT CUSTOM GOBLIN_BASE_0036 "CINEMATIC"
 SENDEVENT CUSTOM MARKER_0495 "CINEMATIC"
 ACCEPT

>>STARTFADE
 SET #fading 1
 WORLD_FADE OUT 1000 0 0 0
 TIMERfadein -m 300 10 GOTO FADEAMB
 ACCEPT

>>FADEAMB
 INC §vol 1
 IF (§vol > 100) TIMERfadein OFF ACCEPT
 AMBIANCE -v §vol ambient_gob_intro
 ACCEPT
